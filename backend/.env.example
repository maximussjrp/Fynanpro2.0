# ==============================================
# FYNANPRO 2.0 - Environment Variables
# ==============================================
# Copy this file to .env and fill with your values
# Never commit .env to version control!

# ==============================================
# SERVER CONFIGURATION
# ==============================================
# Environment: development, production, test
NODE_ENV=development

# Port where the API will run
PORT=3000

# App URL (backend)
APP_URL=http://localhost:3000

# Frontend URL for CORS configuration
# Production: https://app.fynanpro.com
# Development: http://localhost:3001
FRONTEND_URL=http://localhost:3001

# ==============================================
# DATABASE
# ==============================================
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
# Example: postgresql://postgres:password123@localhost:5432/fynanpro
DATABASE_URL="postgresql://fynanpro:fynanpro123@localhost:5432/fynanpro_dev?schema=public"

# ==============================================
# REDIS CACHE (Optional but recommended)
# ==============================================
# Redis connection URL
# Local: redis://localhost:6379
# Remote: redis://user:password@host:port
REDIS_URL="redis://localhost:6379"

# Enable/disable Redis cache
# Set to "false" to disable caching (not recommended for production)
REDIS_ENABLED=true

# Cache TTL in seconds (default: 300 = 5 minutes)
CACHE_TTL=300

# ==============================================
# JWT AUTHENTICATION
# ==============================================
# Secret key for signing JWT tokens (min 32 characters recommended)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=fynanpro-super-secret-key-change-this-in-production-min-32-chars

# Refresh token secret (different from JWT_SECRET for security)
JWT_REFRESH_SECRET=fynanpro-refresh-secret-key-change-this-in-production-different

# Access token expiration (short-lived)
# Examples: "15m", "30m", "1h"
JWT_EXPIRATION=15m

# Refresh token expiration (long-lived)
# Examples: "7d", "30d", "90d"
JWT_REFRESH_EXPIRATION=30d

# ==============================================
# EMAIL (Optional - Future feature)
# ==============================================
# SMTP server configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=
MAIL_PASSWORD=
MAIL_FROM=noreply@fynanpro.com

# ==============================================
# SUPER MASTER CREDENTIALS (Development only)
# ==============================================
# Super admin account for initial setup
# CHANGE THESE IN PRODUCTION!
SUPER_MASTER_EMAIL=supermaster@fynanpro.com
SUPER_MASTER_PASSWORD=SuperMaster@2025!

# ==============================================
# LOGGING
# ==============================================
# Log level: error, warn, info, debug
LOG_LEVEL=info

# Log to file (optional)
# LOG_FILE=logs/app.log

# ==============================================
# RATE LIMITING
# ==============================================
# Max login attempts per window
RATE_LIMIT_MAX=5

# Rate limit window in minutes
RATE_LIMIT_WINDOW=15

# ==============================================
# SECURITY
# ==============================================
# Bcrypt rounds for password hashing (default: 10)
# Higher = more secure but slower (8-12 recommended)
BCRYPT_ROUNDS=10

# Enable HTTPS redirect in production
# FORCE_HTTPS=false

# ==============================================
# SEEDING (Development only)
# ==============================================
# Auto-create default categories on first run
SEED_CATEGORIES=true

# Create demo data for testing (development only)
SEED_DEMO_DATA=false

# ==============================================
# MONITORING (Production - optional)
# ==============================================
# Sentry DSN for error tracking
# SENTRY_DSN=https://your-sentry-dsn

# New Relic license key
# NEW_RELIC_LICENSE_KEY=your-key

# ==============================================
# PAYMENT GATEWAY (Future feature - optional)
# ==============================================
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...

# ==============================================
# NOTES
# ==============================================
# 1. Required variables: DATABASE_URL, JWT_SECRET, JWT_REFRESH_SECRET
# 2. Recommended: REDIS_URL, FRONTEND_URL
# 3. Optional: All monitoring and external services
# 4. Never share your .env file or commit it to Git
# 5. Use strong JWT secrets in production (32+ chars)
# 6. Keep BCRYPT_ROUNDS between 10-12 for balance
# 7. Enable Redis in production for better performance
